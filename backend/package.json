    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.3.1",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "babel-jest": "^30.1.2",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.2",
    "jest": "^29.7.0",
    "jest-environment-node": "^30.1.2",
    "mongodb-memory-server": "^8.16.1",
