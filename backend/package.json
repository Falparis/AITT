{
  "name": "soroban-compliance-backend",
  "version": "1.0.0",
  "description": "Compliance certification platform backend (ExpressJS) - Soroban-ready",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "cross-env NODE_ENV=test jest --runInBand",
